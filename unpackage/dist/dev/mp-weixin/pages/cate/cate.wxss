.scroll-view-container {
  display: flex;
}
.scroll-view-container .left-scroll-view {
  width: 120px;
}
.scroll-view-container .left-scroll-view .left-scroll-item {
  background-color: #F7F7F7;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.scroll-view-container .left-scroll-view .left-scroll-item.active {
  background-color: #FFFFFF;
  position: relative;
}
.scroll-view-container .left-scroll-view .left-scroll-item.active::before {
  content: ' ';
  background-color: #C00000;
  position: absolute;
  display: block;
  width: 3px;
  height: 30px;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
